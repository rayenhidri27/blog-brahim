{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}


	<h1>Bienvenue dans la page d'accueil</h1>
	<div class="row">
		<div class="col-md-8">
			<div class="row">

				{% for article in articles %}
					<div class="card col-md-3">
						<p class="date">Ecrit le
							{{article.createdAt | date("d/m/Y")}}
							Ã 
							{{article.createdAt | date("H:i")}}
							par
							<span class="author">
								{{article.author}}</span>
						</p>

						<img src="/assets/blog/images/{{article.image}}" width="100%" class="card-img-top" alt="{{article.image}}">


						<div class="card-body">
							<h5 class="card-title">{{article.title}}</h5>
							<a href="{{path('show', {id : article.id})}}" class="btn btn-primary">En savoir plus</a>

						</div>
					</div>

				{% endfor %}
			</div>
		</div>


		<div class="col-md-4">
			<h2>Categories</h2>

			<ul class="list-group">

				{% for category in categories %}
					<li class="list-group-item">


						<a href="{{path('show_article', {id : category.id})}}">

							{{category.title}}
							
							<span class="badge"> {{category.articles | length}} articles  </span>


						</a>

					</li>


				{% endfor %}


			</ul>

		</div>


	</div>


{% endblock %}
